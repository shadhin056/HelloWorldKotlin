<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Registration form"
                    android:textColor="?android:attr/colorFocusedHighlight"
                    android:textStyle="bold"/>

            <EditText
                    android:id="@+id/etxtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User Name"
                    android:inputType="text"/>

            <EditText
                    android:id="@+id/etxtNickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:inputType="text"/>

            <EditText
                    android:id="@+id/etxPhoneNumer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_phone"
                    android:inputType="number"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText

                        android:id="@+id/etxBirthday"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_birth_date"
                        android:inputType="text"
                        android:paddingRight="40dp"
                        android:singleLine="true"
                        android:text="31/12/1990"/>

                <ImageButton

                        android:id="@+id/calender_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/etxBirthday"
                        android:layout_alignRight="@+id/etxBirthday"
                        android:layout_alignBottom="@+id/etxBirthday"
                        android:background="@drawable/calender"/>

            </RelativeLayout>


            <EditText
                    android:id="@+id/etxEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_email"
                    android:inputType="textWebEmailAddress"/>
            />

            <EditText
                    android:id="@+id/etxPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_password"
                    android:inputType="textWebPassword"/>
            <EditText
                    android:id="@+id/reenter_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/enter_password_again"
                    android:inputType="textWebPassword"/>
            />

            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:text="Country"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

            <Spinner

                    android:id="@+id/spPresentCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            />

            <CheckBox

                    android:id="@+id/chkAgree"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:onClick="itemClicked"
                    android:text="Agree"
                    android:textSize="16sp"/>

            <RadioGroup

                    android:id="@+id/raGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender" />-->

                <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="male"/>

                <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="female"/>

            </RadioGroup>

            <TextView
                    android:id="@+id/birthday_date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="10">

                <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_weight="8"
                        android:src="@drawable/user"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                    <Button

                            android:id="@+id/pick_image_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Pick image"/>

                    <!-- <Button
                         android:id="@+id/up_into_db_btn"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_weight="2"
                         android:text="Upload image"/>-->

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <Button
                        android:id="@+id/btnReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:text="@string/enter_submit"
                        android:textColor="@android:color/holo_green_light"/>


                <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:text="@string/enter_login"
                        android:textColor="@android:color/holo_blue_dark"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                <Button
                        android:id="@+id/random_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:text="@string/enter_random"
                        android:textColor="@android:color/holo_orange_light"/>

                <Button

                        android:id="@+id/quick_load_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:text="All Users"
                        android:textColor="@android:color/holo_purple"/>

                <Button

                        android:id="@+id/reset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:text="@string/enter_reset"
                        android:textColor="@android:color/holo_red_dark"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                <Button

                        android:id="@+id/restapi_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="RestfulApi"/>

                <Button

                        android:id="@+id/restapi_list_view_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="RestfulApi with ListView"
                        android:textAllCaps="false"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">

                <Button

                        android:id="@+id/restapi_myjson"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Json RestfulApi"
                        android:textAllCaps="false"/>

                <Button
                        android:id="@+id/btn_restapi_reg"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rest Api Reg"
                        android:textAllCaps="false"/>

                <Button
                        android:id="@+id/btn_restapi_login"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rest Api login"
                        android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>